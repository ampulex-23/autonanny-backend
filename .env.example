# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/database_name

# Application Settings
APP_NAME=AutoNanny
PORT=8000
LOG_LEVEL=info
SSL_CERTFILE=fullchain.pem
SSL_KEYFILE=privkey.pem

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase Configuration
# Path to Firebase JSON credentials for client app
FIREBASE_CLIENT_CREDENTIALS=fb_client.json
# Path to Firebase JSON credentials for driver app
FIREBASE_DRIVER_CREDENTIALS=fb_driver.json
# Firebase Dynamic Links API Key
FIREBASE_DYNAMIC_LINKS_API_KEY=your-firebase-dynamic-links-api-key
FIREBASE_DYNAMIC_LINKS_DOMAIN=https://nyago.page.link

# SMS Aero Configuration
SMS_AERO_EMAIL=your-sms-aero-email
SMS_AERO_API_KEY=your-sms-aero-api-key

# Yandex OAuth
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret

# Franchise Settings (MVP: single franchise mode)
DEFAULT_FRANCHISE_ID=1
DEFAULT_FRANCHISE_NAME=АвтоНяня Москва

# Test Credentials (for automated tests)
TEST_ADMIN_LOGIN=test_admin
TEST_ADMIN_PASSWORD=test_password
TEST_FRANCHISE_ADMIN_LOGIN=test_franchise
TEST_FRANCHISE_ADMIN_PASSWORD=test_password
TEST_DRIVER_LOGIN=test_driver
TEST_DRIVER_PASSWORD=test_password
